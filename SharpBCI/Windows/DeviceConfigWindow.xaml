<Window x:Class="SharpBCI.Windows.DeviceConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Title="" Height="160" Width="300" Background="{StaticResource BackgroundBrush}"
        Loaded="Window_OnLoaded" LayoutUpdated="Window_OnLayoutUpdated" KeyDown="Window_OnKeyDown" >
    <DockPanel x:Name="DockPanel">
        <Grid DockPanel.Dock="Bottom" x:Name="ActionPanel" VerticalAlignment="Top" >
            <Button x:Name="OkBtn" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,10" Width="120" Height="56" Click="OkBtn_OnClick">
                <Button.ContentTemplate>
                    <ItemContainerTemplate>
                        <StackPanel>
                            <TextBlock Text="OK" TextAlignment="Center" FontSize="18"></TextBlock>
                            <TextBlock Text="(Alt+Enter)" TextAlignment="Center" FontSize="8"></TextBlock>
                        </StackPanel>
                    </ItemContainerTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>

    </DockPanel>
</Window>
